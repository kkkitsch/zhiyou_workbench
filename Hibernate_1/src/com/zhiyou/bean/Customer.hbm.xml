<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<!-- 主要是配置bean的属性和数据库字段的对应 -->
	<class name="com.zhiyou.bean.Customer" table="customer">

		<!-- 主键对应 -->
		<id name="cust_id" column="cust_id">
			<!-- 主键策略 （与自增长有关） -->
			<generator class="native"></generator>
		</id>

		<!-- 其他字段对应，如果字段的名称和属性的名称一致，可以省略不写 -->
		<property name="cust_name" column="cust_name"></property>
		<property name="cust_level" column="cust_level"></property>
		<property name="cust_linkman" column="cust_linkman"></property>
		<property name="cust_phone" column="cust_phone"></property>
		<property name="cust_mobile" column="cust_mobile"></property>
		<property name="cust_address" column="cust_address"></property>

		<!-- 设置一对多的关系 -->
		<set name="linkMans" cascade="save-update" fetch="subselect" lazy="true">
			<key column="lkm_cust_id"></key>
			<one-to-many class="com.zhiyou.bean.LinkMan" />
		</set>

	</class>

</hibernate-mapping>